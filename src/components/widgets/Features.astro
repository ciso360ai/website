---
import { Icon } from 'astro-icon';

const items = [
	{
		title: 'Attack Surface Discovery',
		description:
			'Continous discovery of assets, identities, domains, hosts, IPs, URLs, ports',
		icon: 'ic:baseline-network-wifi',
	},
	{
		title: 'Offensive Toolchain',
		description:
			'Network and web assets scanning based on offensive tools, same as used by red teams or attackers',
		icon: 'ic:baseline-ads-click',
	},
	{
		title: 'Vulnerability Management',
		description:
			'Continous vulnerability management, triage, prioritisation, tracking and alerting',
		icon: 'ic:baseline-gps-fixed',
	},
	{
		title: 'Risk managegement',
		description:
			'Risk assessment and mitigation tracking. WIP: AI assisted prioritisation and prediction',
		icon: 'ic:twotone-published-with-changes',
	},
	{
		title: 'Privacy assessment',
		description:
			'WIP: Web scan on GDPR, cookies, SSL non-conformance',
		icon: 'ic:outline-privacy-tip',
	},
	{
		title: 'Identity assessment',
		description:
			'WIP: Dark-web compromise identity and IP scanner',
		icon: 'ic:baseline-crisis-alert',
	},
	{
		title: 'ISMS Policy bundle',
		description:
			'WIP: Cybersecurity policy pack compliant with recognised standards',
		icon: 'ic:outline-playlist-add-check',
	},
	{
		title: 'Collaboration',
		description:
			'Escalation, sharing, alerting, third-party vendor assessments',
		icon: 'ic:sharp-lens-blur',
	},
	{
		title: 'Gamification',
		description:
			'Solving the puzzle...',
		icon: 'ic:baseline-videogame-asset',
	},
];
---

<section class="relative">
	<div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
	<div class="relative max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
			<div class="mb-8 text-center">
				<!-- <p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase">Features</p> -->
				<h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
					Features
				</h2>
				<p class="max-w-3xl mx-auto text-center text-xl text-gray-600 dark:text-slate-400">
					Our current features and work in progress
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start my-12 dark:text-white">
				{
					items.map(({ title, description, icon }) => (
						<div class="relative flex flex-col p-6 bg-white dark:bg-slate-900 rounded shadow-xl hover:shadow-lg transition dark:border dark:border-slate-800">
							<div class="flex items-center mb-4">
								<Icon name={icon} class="w-12 h-12" />

								<div class="ml-4 text-xl font-bold">{title}</div>
							</div>
							<p class="text-gray-500 dark:text-gray-400 text-md">{description}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
